{
  "manifest_version": 2,

  "name": "Prevent computer from sleeping",
  "description": "Prevent computer from sleeping when clicked",
  "version": "1.0",
	  "browser_action": {
	      "default_icon": "icon/sleep_active.png"
		  },
	"icons": { 
	"48": "icon/sleep_active.png"
	},

  "permissions": [
    "power"
  ],

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}